<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/friend_profile_profile_picture"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:id="@+id/friend_profile_empty_above_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:text="Name"
                android:id="@+id/friend_profile_name"
                android:paddingBottom="15dp"
                android:layout_above="@+id/friend_profile_color_bar"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                android:id="@+id/friend_profile_color_bar"
                android:layout_below="@id/friend_profile_empty_above_pic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#eeeeee"
                android:layout_below="@id/friend_profile_color_bar"
                android:id="@+id/view" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/friend_profile_empty_above_pic"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_birth_date"
                        android:id="@+id/friend_profile_birth_date"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_birth_date_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_city"
                        android:id="@+id/friend_profile_city"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_city_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_language"
                        android:id="@+id/friend_profile_language"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_language_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_hair_color"
                        android:id="@+id/friend_profile_hair_color"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_hair_color_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_hair_type"
                        android:id="@+id/friend_profile_hair_type"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_hair_type_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_eyes_color"
                        android:id="@+id/friend_profile_eyes_color"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_eyes_color_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_distance"
                        android:id="@+id/friend_profile_distance"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/friend_profile_distance_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp" />
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/friend_profile_meet"
                        android:id="@+id/friend_profile_meet"
                        android:textColor="@color/white" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/friend_profile_send_message"
                        android:id="@+id/friend_profile_send_message"
                        android:textColor="@color/white" />
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="10dp">

                    <Switch
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/friend_profile_favourite"
                        android:id="@+id/friend_profile_favourite"
                        android:layout_weight = "1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:checked="true" />

                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>