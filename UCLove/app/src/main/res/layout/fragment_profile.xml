<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/profile_profile_picture"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:id="@+id/profile_empty_above_pic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                android:id="@+id/profile_color_bar"
                android:layout_below="@id/profile_empty_above_pic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:layout_below="@id/profile_color_bar"
                android:id="@+id/view" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/profile_empty_above_pic"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_username"
                        android:id="@+id/profile_username"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="20dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_username_data"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_first_name"
                        android:id="@+id/profile_first_name"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_first_name_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_last_name"
                        android:id="@+id/profile_last_name"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_last_name_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_birth_date"
                        android:id="@+id/profile_birth_date"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_birth_date_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_city"
                        android:id="@+id/profile_city"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_city_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_language"
                        android:id="@+id/profile_language"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_language_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_hair_color"
                        android:id="@+id/profile_hair_color"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_hair_color_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_hair_type"
                        android:id="@+id/profile_hair_type"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_hair_type_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_eyes_color"
                        android:id="@+id/profile_eyes_color"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/profile_unspecified"
                        android:id="@+id/profile_eyes_color_data"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"/>
                </TableRow>
            </TableLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>