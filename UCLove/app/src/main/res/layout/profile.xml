<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lsinf1225.groupeo.uclove.Profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:id="@+id/profile_picture"
            android:contentDescription="@string/profile_picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/profile_picture"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/profile_picture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <GridLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/profile_login"
                    android:id="@+id/profile_login"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:layout_below="@+id/profile_firstname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_column="0"
                    android:layout_row="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/profile_name"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/profile_firstname"
                    android:layout_toEndOf="@+id/profile_firstname"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="Nom"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Langue"
                    android:id="@+id/profile_language"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_below="@+id/profile_login"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_column="0"
                    android:layout_row="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Date de naissance"
                    android:id="@+id/profile_birth"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/profile_city"
                    android:layout_toEndOf="@+id/profile_city"
                    android:layout_above="@+id/profile_orientation"
                    android:layout_column="0"
                    android:layout_row="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/profile_city"
                    android:id="@+id/profile_city"

                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_above="@+id/profile_language"
                    android:layout_toRightOf="@+id/profile_name"
                    android:layout_toEndOf="@+id/profile_name"
                    android:layout_column="0"
                    android:layout_row="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/profile_eyes"
                    android:id="@+id/profile_eyes_color"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_below="@+id/profil_sex"
                    android:layout_alignLeft="@+id/profil_sex"
                    android:layout_alignStart="@+id/profil_sex"
                    android:layout_column="0"
                    android:layout_row="7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sexe"
                    android:id="@+id/profil_sex"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_below="@+id/profile_orientation"
                    android:layout_toRightOf="@+id/profile_hair_type"
                    android:layout_toEndOf="@+id/profile_hair_type"
                    android:layout_column="0"
                    android:layout_row="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/hair"
                    android:id="@+id/hair"
                    android:padding="10dp"
                    android:textColor="@color/asphaltdark"
                    android:textSize="15sp"
                    android:layout_below="@+id/profil_sex"
                    android:layout_alignLeft="@+id/profile_city"
                    android:layout_alignStart="@+id/profile_city"
                    android:layout_column="0"
                    android:layout_row="6" />

            </GridLayout>
        </ScrollView>

    </TableLayout>


</RelativeLayout>
