<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lsinf1225.groupeo.uclove.Menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/menu_profile_picture"
        android:contentDescription="@string/profile_picture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#c82727" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prénom"
        android:id="@+id/profile_firstname"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:layout_alignTop="@+id/menu_profile_picture"
        android:layout_toRightOf="@+id/menu_profile_picture"
        android:layout_toEndOf="@+id/menu_profile_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom"
        android:id="@+id/profile_name"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:layout_below="@+id/profile_firstname"
        android:layout_toRightOf="@+id/menu_profile_picture"
        android:layout_toEndOf="@+id/menu_profile_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:layout_below="@+id/profile_name"
        android:layout_toRightOf="@+id/menu_profile_picture"
        android:layout_toEndOf="@+id/menu_profile_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date de naissance"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/menu_profile_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ville"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Langue"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Couleur cheveux"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type cheveux"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sexe"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sexualité"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/asphaltdark"
        android:textSize="15sp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
