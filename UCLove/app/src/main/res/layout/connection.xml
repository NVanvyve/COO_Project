<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/appName"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="70sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/login"
            android:id="@+id/textLogin"
            android:textSize="20sp"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_above="@+id/editLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/login"
            android:ems="10"
            android:id="@+id/editLogin"
            android:layout_gravity="center"
            android:layout_above="@+id/textPasswd"
            android:layout_alignLeft="@+id/textLogin"
            android:layout_alignStart="@+id/textLogin"
            android:layout_marginBottom="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/password"
            android:id="@+id/textPasswd"
            android:textSize="20sp"
            android:layout_above="@+id/editPasswd"
            android:layout_alignLeft="@+id/editLogin"
            android:layout_alignStart="@+id/editLogin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPasswd"
            android:text="@string/password"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textPasswd"
            android:layout_alignStart="@+id/textPasswd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrer"
            android:id="@+id/registrerButton"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/editPasswd"
            android:layout_alignStart="@+id/editPasswd"
            android:layout_marginBottom="69dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection"
            android:id="@+id/ConnectButton"
            android:layout_above="@+id/registrerButton"
            android:layout_alignLeft="@+id/registrerButton"
            android:layout_alignStart="@+id/registrerButton"
            android:layout_alignRight="@+id/registrerButton"
            android:layout_alignEnd="@+id/registrerButton" />

    </RelativeLayout>

</RelativeLayout>