<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="1"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <TextView
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="25/04"
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/custom_row_planned_meetings_date"
        android:layout_centerVertical="true"
        android:textSize="35sp"
        android:layout_marginEnd="15dp"/>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/custom_row_planned_meetings_color_bar"
        android:layout_toRightOf="@+id/custom_row_planned_meetings_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adrien Ballet"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="15dp"
        android:id="@+id/custom_row_planned_meetings_name"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/custom_row_planned_meetings_color_bar"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/custom_row_planned_meetings_rdv_id"
        android:visibility="gone" />
</RelativeLayout>